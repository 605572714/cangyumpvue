@import '../common/index.wxss';

.van-progress {
  position: relative;

  height: 5px;

  border-radius: 4px;
  background: #e5e5e5;
}

.van-progress__portion {
  position: absolute;
  left: 0;

  height: 100%;
  border-radius: inherit;
}

.van-progress__portion--with-pivot {
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
}

.van-progress__pivot {
  font-size: 10px;
  line-height: 1.6;

  position: absolute;
  top: 50%;
  right: 0;

  box-sizing: border-box;
  min-width: 2em;
  padding: 0 5px;

  -webkit-transform: translate(100%,-50%);
          transform: translate(100%,-50%);
  text-align: center;
  word-break: keep-all;

  border-radius: 1em;
  background-color: #e5e5e5;

}
